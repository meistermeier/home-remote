<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="voiceCommandRegistry" class="com.meistermeier.homeremote.voice.command.VoiceCommandRegistry"/>

    <!--maybe it's not sooo cool to start a thread in the init method-->
    <bean id="voiceControl" class="com.meistermeier.homeremote.voice.VoiceControl" init-method="startListening">
        <constructor-arg ref="voiceCommandRegistry"/>
    </bean>

</beans>